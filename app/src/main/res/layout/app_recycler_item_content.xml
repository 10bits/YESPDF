<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/app_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            tools:src="@drawable/app_ic_can_down_grey"/>

        <TextView
            android:id="@+id/app_tv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:maxLength="5"
            android:ellipsize="end"
            android:textColor="@color/base_black_hint"
            tools:text="2547"/>

        <TextView
            android:id="@+id/app_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/app_iv_icon"
            android:layout_toStartOf="@id/app_tv_page"
            android:layout_marginStart="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="第1章 用控件的语言表达向量、矩阵和行列式，用控件的语言表达向量、矩阵和行列式"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginStart="62dp"
        android:background="@color/base_black_divider_shallow"/>

</LinearLayout>