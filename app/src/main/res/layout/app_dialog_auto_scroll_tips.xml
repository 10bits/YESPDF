<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000">

                <ImageView
                    android:id="@+id/app_mobile_model"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/app_mix2_model" />

                <ImageView
                    android:id="@+id/app_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/app_mobile_model"
                    android:src="@drawable/app_ic_arrow_back_white_24dp" />

                <ImageView
                    android:id="@+id/app_play_or_pause"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="56dp"
                    android:src="@drawable/app_animated_play_pause" />

                <SeekBar
                    android:id="@+id/app_scroll_level"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="96dp"
                    android:maxHeight="2dp"
                    android:progress="40"
                    android:progressDrawable="@drawable/app_seekbar_bg"
                    android:thumb="@drawable/app_shape_circle_red" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/app_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:textSize="14dp"
                    android:text="@string/app_auto_scroll_tips"
                    android:textColor="@color/base_black" />

            </FrameLayout>

            <Button
                android:id="@+id/app_got_it"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/app_sel_btn_round_red"
                android:textSize="14dp"
                android:text="@string/app_got_it"
                android:textColor="@color/base_white"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>