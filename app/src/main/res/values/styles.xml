<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="AppToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTitleStyle</item>
        <item name="titleTextColor">@color/app_color_accent</item>
    </style>

    <style name="AppTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/base_text_hlarge</item>
    </style>

    <style name="AppTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/AppTabTextStyle</item>
        <item name="tabTextColor">@color/base_black_hint</item>
        <item name="tabSelectedTextColor">@color/base_black</item>
        <item name="tabRippleColor">@color/base_transparent</item>
    </style>

    <style name="AppTabTextStyle" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/base_text_xxxhlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppPwMenu" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/app_pw_fade_in</item>
        <item name="android:windowExitAnimation">@anim/app_pw_fade_out</item>
    </style>

    <style name="AppPwCollection" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/app_pw_collection_fade_in</item>
        <item name="android:windowExitAnimation">@anim/app_pw_collection_fade_out</item>
    </style>

</resources>
